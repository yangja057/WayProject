<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.yangj.wayproject.WRegiReviewRVActivity">

    <EditText
        android:id="@+id/regi_btnStartingPoint"
        android:layout_width="550dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_backgroud"
        android:hint="출발지 검색" />

    <EditText
        android:id="@+id/regi_btnEndingPoint"
        android:layout_width="550dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="@drawable/btn_backgroud"
        android:hint="도착지 검색" />

    <ImageButton
        android:id="@+id/regi_addItemButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="30dp"
        app:srcCompat="@drawable/plus"
        android:background="#00ff0000"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/regi_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

</LinearLayout>
